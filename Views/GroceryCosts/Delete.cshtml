@model messManagement.Models.GroceryCost

@{
    ViewBag.Title = "Delete Grocery Cost";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Delete Grocery Cost</h2>

<div class="alert alert-warning">
    Are you sure you want to delete this grocery cost entry?
</div>

<dl class="dl-horizontal">
    <dt>Day</dt>
    <dd>@Model.Day</dd>
    <dt>Month</dt>
    <dd>@Model.Month</dd>
    <dt>Year</dt>
    <dd>@Model.Year</dd>
    <dt>Amount</dt>
    <dd>@Model.Amount</dd>
</dl>

@using (Html.BeginForm("Delete", "GroceryCosts", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.Id)
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="@Url.Action("Index")" class="btn btn-default">Cancel</a>
}
