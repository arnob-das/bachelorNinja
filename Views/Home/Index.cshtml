@{
    ViewBag.Title = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mess Management System</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
    <style>
        .hero {

            }

        .bg-base-100 {
            background-color: #f8f9fa;
        }

        .bg-base-200 {
            background-color: #e9ecef;
        }
    </style>
</head>
<body>
    <div>
        <section class="hero py-5 text-center text-md-start">
            <div class="">
                <div class="row align-items-center">
                    <div class="col-lg-6 order-lg-2">
                        <img src="~/img/homeImg.jpg" class="img-fluid rounded shadow mb-4 mb-lg-0" alt="Hero Image">
                    </div>
                    <div class="col-lg-6">
                        <h1 class="display-4 fw-bold mb-3">Welcome to Mess Management System</h1>
                        <p class="lead mb-4">Efficiently manage your mess with our easy-to-use system. Keep track of members, meals, bills, and more all in one place.</p>
                        @Html.ActionLink("Get Started", "ManagerRegister", "Register", new { area = "" }, new { @class = "p-2 btn btn-primary" })
                    </div>
                </div>
            </div>
        </section>
        <section class="py-5 bg-base-100 text-center">
            <div class="">
                <h2 class="display-6 fw-bold mb-5">Features</h2>
                <div class="row row-cols-1 row-cols-sm-2 row-cols-lg-3 g-4">    
                    <div class="col">
                        <div class="card h-100 bg-base-200 shadow-sm">
                            <div class="card-body text-center">
                                <i class="fas fa-user fa-2x mb-3"></i>
                                <h5 class="card-title fw-bold mb-3">User Management</h5>
                                <p class="card-text">Manage user registrations, approvals, and role assignments with ease.</p>
                            </div>
                        </div>
                    </div>
                    <div class="col">
                        <div class="card h-100 bg-base-200 shadow-sm">
                            <div class="card-body text-center">
                                <i class="fas fa-utensils fa-2x mb-3"></i>
                                <h5 class="card-title fw-bold mb-3">Meal Tracking</h5>
                                <p class="card-text">Track daily meals and manage meal deposits effortlessly.</p>
                            </div>
                        </div>
                    </div>
                    <div class="col">
                        <div class="card h-100 bg-base-200 shadow-sm">
                            <div class="card-body text-center">
                                <i class="fas fa-cart-shopping fa-2x mb-3"></i>
                                <h5 class="card-title fw-bold mb-3">Grocery Management</h5>
                                <p class="card-text">Add your grocery cost and view monthly grocery cost effortlessly.</p>
                            </div>
                        </div>
                    </div>
                    <div class="col">
                        <div class="card h-100 bg-base-200 shadow-sm">
                            <div class="card-body text-center">
                                <i class="fas fa-plug fa-2x mb-3"></i>
                                <h5 class="card-title fw-bold mb-3">Utility Bill Management</h5>
                                <p class="card-text">Manage your utility bill and tracks records.</p>
                            </div>
                        </div>
                    </div>
                    <div class="col">
                        <div class="card h-100 bg-base-200 shadow-sm">
                            <div class="card-body text-center">
                                <i class="fas fa-building fa-2x mb-3"></i>
                                <h5 class="card-title fw-bold mb-3">Flat Rent</h5>
                                <p class="card-text">Assign Flat and Room rent easily by our system.</p>
                            </div>
                        </div>
                    </div>
                    <div class="col">
                        <div class="card h-100 bg-base-200 shadow-sm">
                            <div class="card-body text-center">
                                <i class="fas fa-chart-line fa-2x mb-3"></i>
                                <h5 class="card-title fw-bold mb-3">Dashboard</h5>
                                <p class="card-text">User dashboard and manager dashboard will give you a clear idea of overall costing.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <section class="py-5 text-center text-white" style="background: linear-gradient(to right, #9333ea, #3b82f6);">
            <div class="">
                <h2 class="display-6 fw-bold mb-4">Ready to simplify your mess management?</h2>
                @Html.ActionLink("Get Started", "ManagerRegister", "Register", new { area = "" }, new { @class = "btn btn-primary p-2" })
            </div>
        </section>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
